{
   "manifest_version": 2,
   "content_scripts": [
      {
        "js": ["vkinit.js","includes/vk_skinman.js"],
        "run_at": "document_start",
        "matches": ["*://vk.com/*","*://*.vk.com/*","*://vkontakte.ru/*","*://*.vkontakte.ru/*",
                    "*://userapi.com/*","*://*.userapi.com/*",
                    "http://durov.ru/*",
                    "http://youtube.com/*","http://*.youtube.com/*",
                    "http://vimeo.com/*","http://*.vimeo.com/*"],
        "all_frames": true
      }
   ],
   "web_accessible_resources": [
      "includes/vklang.js",
      "includes/vk_lib.js", 
      "includes/vk_settings.js",
      "includes/vk_media.js",
      "includes/vk_users.js",
      "includes/vk_face.js",
      "includes/vk_page.js",
      "includes/vk_skinman.js",
      "includes/vk_txtedit.js",
      "includes/vk_main.js",
      "includes/vk_resources.js",	
      "includes/vkopt.js"
   ],
  "name": "VkOpt",
  "version": "2.1.2.0",
  "description": "Добавление множества функций, упрощающих жизнь ВКонтакте.ру. Official site and support: http://vkopt.net/",
  "icons": { "32":"img/bk_n_32.png",
             "48": "img/bk_n_48.png",
             "128": "img/bk_n_128.png" },
  "permissions": ["http://*/*","*://vk.com/*","*://*.vk.com/*","*://userapi.com/*","*://*.userapi.com/*"]
}
